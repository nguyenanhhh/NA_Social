<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Title Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friends"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:paddingBottom="8dp" />

    <!-- Friend Requests Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Friend Requests"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:textColor="#000000" />

    <!-- Friend Request Item -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="#F2F2F2"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:backgroundTintMode="multiply">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/avt"
        android:contentDescription="User Avatar"
        android:layout_marginEnd="10dp"
        />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Be Heo"
                android:textSize="16sp"
                android:textColor="#000000"
                android:fontFamily="@font/nunito_bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 mutual friends"
                android:textSize="10sp"
                android:textColor="#666666" />
        </LinearLayout>

        <Button
            android:id="@+id/accept_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:backgroundTint="#0080FF"
            android:textColor="#FFFFFF"
            android:paddingHorizontal="16dp" />

        <Button
            android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:backgroundTint="#E0E0E0"
            android:textColor="#000000"
            android:paddingHorizontal="16dp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Friend Suggestions Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="People You May Know"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:textColor="#000000" />

    <!-- Suggested Friend Item -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="#F2F2F2"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:backgroundTintMode="multiply">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/avt"
        android:contentDescription="User Avatar"
        android:layout_marginEnd="10dp"
         />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyen Anh"
                android:textSize="16sp"
                android:textColor="#000000"
                android:fontFamily="@font/nunito_bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 mutual friends"
                android:textSize="10sp"
                android:textColor="#666666" />
        </LinearLayout>

        <Button
            android:id="@+id/add_friend_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Friend"
            android:backgroundTint="#0080FF"
            android:textColor="#FFFFFF"
            android:paddingHorizontal="14dp" />

        <Button
            android:id="@+id/remove_suggestion_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove"
            android:backgroundTint="#E0E0E0"
            android:textColor="#000000"
            android:paddingHorizontal="14dp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</LinearLayout>
